<%= render "shared/errors" %>

<%= simple_form_for @meal_plan do |f| %>
  <%= f.hidden_field :start_date %>
  <%= f.fields_for :meals do |meal_f| %>
    <%= meal_f.hidden_field :id %>
    <%= meal_f.hidden_field :date %>
    <p><%= meal_f.object.date.to_s %></p>
    <%= meal_f.select :recipe_id, current_user.recipe_options %>
  <% end %>
  <%= f.submit %>
<% end %>
